@page
@model RegisterModel
@{
    ViewData["Title"] = "REGISTER";
}
@section Head{
    <style type="text/css">
        body {
            background-image: url('../../img/snowy-hill.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: cover;
            padding-top: 50px;
            padding-bottom: 20px;
        }
    </style>
}
<center>
    <div class="div-register-logo">
        <img class="img-register-logo" src="~/img/add.png" />
    </div>
    <h1 class="h1-register">@ViewData["Title"]</h1>
    <div class="div-register-main">
        <div class="div-register-inside">
            <section>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="row">
                        <div class="col-md-6 div-nopadding">
                            <h4>Some official...</h4>
                            <hr />
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 div-nopadding">
                            <section>
                                <h4>Introduce yourself.</h4>
                                <hr />
                                <div class="form-group">
                                    <label asp-for="Input.FirstName"></label>
                                    <input asp-for="Input.FirstName" class="form-control" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.LastName"></label>
                                    <input asp-for="Input.LastName" class="form-control" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </section>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </section>
        </div>
    </div>
</center>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
